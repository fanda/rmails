# -----------------------------
# PostgreSQL configuration file
# -----------------------------

# - Connection Settings -

listen_addresses = 'localhost'		# what IP address(es) to listen on;
					# comma-separated list of addresses;
					# defaults to 'localhost', '*' = all
					# (change requires restart)
port = <%= port||5432 %>				# (change requires restart)
max_connections = <%= max_connections||111 %>			# (change requires restart)
# Note:  Increasing max_connections costs ~400 bytes of shared memory per
# connection slot, plus lock space (see max_locks_per_transaction).


# - Memory -

shared_buffers = 32MB			# min 128kB
					# (change requires restart)
#temp_buffers = 8MB			# min 800kB
#max_prepared_transactions = 0		# zero disables the feature
					# (change requires restart)
# Note:  Increasing max_prepared_transactions costs ~600 bytes of shared memory
# per transaction slot, plus lock space (see max_locks_per_transaction).
# It is not advisable to set max_prepared_transactions nonzero unless you
# actively intend to use prepared transactions.
#work_mem = 1MB				# min 64kB
#maintenance_work_mem = 16MB		# min 1MB
#max_stack_depth = 2MB			# min 100kB


# - Kernel Resource Usage -

#max_files_per_process = 1000		# min 25
					# (change requires restart)
#shared_preload_libraries = ''		# (change requires restart)
ssl=false

# - Locale and Formatting -

#datestyle = 'iso, mdy'
data_directory = '/var/lib/postgresql/9.1/main'
# These settings are initialized by initdb, but they can be changed.
lc_messages = '<%= `echo $LANG` %>'			# locale for system error message
					# strings
lc_monetary = '<%= `echo $LANG` %>'			# locale for monetary formatting
lc_numeric = '<%= `echo $LANG` %>'			# locale for number formatting
lc_time = '<%= `echo $LANG` %>'				# locale for time formatting

# default configuration for text search
default_text_search_config = 'pg_catalog.english'

shared_buffers = 300kB
